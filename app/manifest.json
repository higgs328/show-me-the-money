{
  "manifest_version": 3,
  "name": "Show me the Money",
  "version": "1.1.0",
  "description": "A Chrome Extension that uses jquery on the NYC Jobs site to highlight important Job Vacancy details hidden from the end-user.",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "vendor/jquery.min.js",
        "content.js"
      ],
      "matches": [
        "https://cityjobs.nyc.gov/job/*",
        "https://cityjobs.nyc.gov/jobs?*"
      ]
    }
  ]
}
